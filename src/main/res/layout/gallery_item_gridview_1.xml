<?xml version="1.0" encoding="utf-8"?>
<com.god.widget.LinearLayoutSquare xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2px">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gridView_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_loader" />

        <FrameLayout
            android:id="@+id/gridView_fl_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:layout_gravity="end|top">

            <CheckBox
                android:id="@+id/gridView_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:button="@drawable/check_box"/>

            <TextView
                android:id="@+id/select_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:text="2"/>
        </FrameLayout>
    </FrameLayout>
</com.god.widget.LinearLayoutSquare>